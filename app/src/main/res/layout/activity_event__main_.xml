<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0B0235"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText

            android:id="@+id/ADD_EVENT_event_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_back"
            android:hint="@string/add_event_name"
            android:inputType="textMultiLine"
            android:layout_margin="20dp"
            android:gravity="center" />

        <Spinner
            android:id="@+id/ADD_EVENT_event_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ADD_EVENT_event_desc_edit_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/edittext_back"
            android:hint="@string/add_event_desc"
            android:inputType="textMultiLine"
            android:layout_margin="20dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ADD_EVENT_location_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_back"
                android:gravity="center"
                android:hint="@string/add_location"
                android:inputType="textMultiLine"
                />

            <Button
                android:background="@drawable/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_location"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/ADD_EVENT_add_location_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/time_icon"
                android:layout_margin="10dp"
                android:id="@+id/ADD_EVENT_select_event_start_time_image_button"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_start_time"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/ADD_EVENT_event_start_time_text_view"
                android:layout_margin="10dp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/time_icon"
                android:layout_margin="10dp"
                android:id="@+id/ADD_EVENT_select_event_end_time_Image_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_end_time"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/ADD_EVENT_select_end_time_text_view"
                android:layout_margin="10dp">
            </TextView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/calendar"
                android:layout_margin="10dp"
                android:id="@+id/ADD_EVENT_select_event_end_date_Image_button" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_end_date"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/ADD_EVENT_select_end_date_text_view"
                android:layout_margin="10dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:background="@android:color/holo_green_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/interval_type" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/interval_type_listener">
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/ADD_EVENT_interval_type_spinner"
                    android:layout_height="60dp">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/interval_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/every"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:gravity="center" />
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/ADD_EVENT_interval_value_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_back"
                    android:inputType="numberDecimal"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/ADD_EVENT_interval_type_text_view"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/edittext_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_reminder_button"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/ADD_EVENT_create_reminder_button" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ADD_EVENT_reminders_list_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:background="@drawable/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_event_button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/ADD_EVENT_add_event_button" />


    </LinearLayout>

</ScrollView>
