<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="?attr/card_day_edge_background"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:background="@drawable/white_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#AEEA00"
                    android:id="@+id/SINGLE_EVENT_name"
                    android:textSize="40dp"
                    android:text="Event" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/white_stroke"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#D30F0F"
                            android:id="@+id/SINGLE_EVENT_start_date"
                            android:textStyle="bold"
                            android:text="Start Date"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/holo_green_dark"
                            android:id="@+id/SINGLE_EVENT_start_time"
                            android:textSize="20sp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/white_stroke"

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#D30F0F"
                            android:id="@+id/SINGLE_EVENT_end_date"
                            android:textStyle="bold"
                            android:text="End Date"
                            android:textSize="15dp" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#AEEA00"
                            android:id="@+id/SINGLE_EVENT_end_time"
                            android:textSize="20dp"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/white_stroke"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:background="@drawable/white_stroke"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#D30F0F"
                            android:textSize="20dp"
                            android:text="Type" />
                        <TextView
                            android:background="@drawable/white_stroke"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:id="@+id/SINGLE_EVENT_type"
                            android:textSize="20dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/white_stroke"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:background="@drawable/white_stroke"
                            android:textColor="#D30F0F"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:text="@string/interval_type" />
                        <TextView
                            android:background="@drawable/white_stroke"

                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"                            android:id="@+id/SINGLE_EVENT_interval"
                            android:textSize="20dp"
                             />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                >
                <ImageButton
                    android:layout_weight="1"
                    android:background="@drawable/white_stroke"
                    android:id="@+id/SINGLE_EVENT_share_event_button"
                    android:layout_margin="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share"
                    />
                <ImageButton
                    android:background="@drawable/white_stroke"
android:layout_weight="1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/SINGLE_EVENT_edit_IMAGE_BUTTON"
                    android:src="@mipmap/edit"
                    android:layout_margin="5dp"
                    />
                <ImageButton
                    android:background="@drawable/white_stroke"
android:layout_weight="1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/SINGLE_EVENT_delete_IMAGE_BUTTON"
                    android:src="@mipmap/delete"
                    android:layout_margin="5dp"
                    />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>